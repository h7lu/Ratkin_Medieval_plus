<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ========== 沙拉 / Salad ========== -->
  <ThingDef ParentName="MealCooked">
    <defName>RkM_Salad</defName>
    <label>ratkin salad</label>
    <description>Made with freshly picked vegetables and wild berries, simply mixed for a refreshing and light taste.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_Salad</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>15</MarketValue>
      <WorkToMake>300</WorkToMake>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealSimple</preferability>
      <tasteThought>RkM_AteSalad</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <optimalityOffsetFeedingAnimals>-25</optimalityOffsetFeedingAnimals>
    </ingestible>
  </ThingDef>

  <!-- ========== 杂烩粥 / Mixed Congee ========== -->
  <ThingDef ParentName="MealCooked">
    <defName>RkM_MixedCongee</defName>
    <label>ratkin mixed congee</label>
    <description>Food to fill the stomach during hard times, tossing whatever is available into a pot to make a random stew.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_MixedCongee</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>15</MarketValue>
      <WorkToMake>300</WorkToMake>
      <Nutrition>0.7</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealSimple</preferability>
      <tasteThought>RkM_AteMixedCongee</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <optimalityOffsetFeedingAnimals>-25</optimalityOffsetFeedingAnimals>
    </ingestible>
  </ThingDef>

  <!-- ========== 鼠麦面包 / Rat Wheat Bread ========== -->
  <ThingDef ParentName="MealCooked">
    <defName>RkM_Bread</defName>
    <label>ratkin bread</label>
    <description>Simple bread made from rat wheat flour. A staple food that fills the belly without any special effects.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_Bread</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>12</MarketValue>
      <WorkToMake>250</WorkToMake>
      <Nutrition>0.85</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealSimple</preferability>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <optimalityOffsetFeedingAnimals>-20</optimalityOffsetFeedingAnimals>
    </ingestible>
  </ThingDef>

  <!-- ========== 康复药膳 / Recovery Meal ========== -->
  <ThingDef ParentName="MealCooked">
    <defName>RkM_RecoveryMeal</defName>
    <label>recovery meal</label>
    <description>A nutritious medicinal meal that promotes healing and boosts the immune system. Made with herbs and quality ingredients.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_RecoveryMeal</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>35</MarketValue>
      <WorkToMake>600</WorkToMake>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealFine</preferability>
      <tasteThought>RkM_AteRecoveryMeal</tasteThought>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RkM_RecoveryBoost</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
  </ThingDef>
  <!--炖菜-->
  <ThingDef Name="RkM_StewBase" ParentName="MealCookedIngredientless" Abstract="True">
	<statBases>
      <MarketValue>22</MarketValue>
      <WorkToMake>450</WorkToMake>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealFine</preferability>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <optimalityOffsetFeedingAnimals>-75</optimalityOffsetFeedingAnimals>
    </ingestible>
  </ThingDef>
  <!--素炖菜-->
  <ThingDef ParentName="RkM_StewBase">
    <defName>RkM_VegetableStew</defName>
    <label>ratkin vegetable stew</label>
    <description>A hearty vegetable stew slow-cooked to perfection. Warm and comforting.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_VegetableStew</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <ingestible>
	  <tasteThought>RkM_AteVegetableStew</tasteThought>
    </ingestible>
	<comps>
      <li Class="CompProperties_Ingredients">
        <noIngredientsFoodKind>NonMeat</noIngredientsFoodKind>
      </li>
    </comps>
  </ThingDef>
  <!--肉炖菜-->
  <ThingDef ParentName="RkM_StewBase">
    <defName>RkM_MeatStew</defName>
    <label>ratkin meat stew</label>
    <description>A rich meat stew slow-cooked with tender chunks of meat. Hearty and satisfying.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_MeatStew</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <ingestible>
	  <tasteThought>RkM_AteMeatStew</tasteThought>
    </ingestible>
	<comps>
      <li Class="CompProperties_Ingredients">
        <noIngredientsFoodKind>Meat</noIngredientsFoodKind>
      </li>
    </comps>
  </ThingDef>
  <!--肉素炖菜-->
  <ThingDef ParentName="RkM_StewBase">
    <defName>RkM_MixedStew</defName>
    <label>ratkin mixed stew</label>
    <description>A balanced stew combining meat and vegetables. The best of both worlds.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_MixedStew</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <ingestible>
	  <tasteThought>RkM_AteMixedStew</tasteThought>
    </ingestible>
	<comps>
      <li Class="CompProperties_Ingredients">
        <splitTransferableFoodKind>true</splitTransferableFoodKind>
      </li>
    </comps>
  </ThingDef>
  
  
  <!--烤物-->
  <ThingDef Name="RkM_GrillBase" ParentName="MealCookedIngredientless" Abstract="True">
	<statBases>
      <MarketValue>25</MarketValue>
      <WorkToMake>750</WorkToMake>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealFine</preferability>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <optimalityOffsetFeedingAnimals>-75</optimalityOffsetFeedingAnimals>
    </ingestible>
  </ThingDef>
  <!-- ========== 烤鸡 / Roast Chicken ========== -->
  <ThingDef ParentName="RkM_GrillBase">
    <defName>RkM_RoastChicken</defName>
    <label>ratkin roast chicken</label>
	<description>A whole chicken roasted over the fire until crispy on the outside and tender on the inside, glistening with oil, served with radishes, potatoes, and some vegetables, sprinkled with spices—a perfect feast for the Ratkin's festival.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_RoastChicken</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <ingestible>
	  <tasteThought>RkM_AteRoastChicken</tasteThought>
    </ingestible>
  </ThingDef>
  <!-- ========== 香料烤鱼 / Spicy Roast Fish ========== -->
  <ThingDef ParentName="RkM_GrillBase">
    <defName>RkM_SpicyFish</defName>
    <label>ratkin spiced grill fish</label>
	<description>Place the fresh fish with spices on an iron pan to roast, then serve it with some cherry tomatoes and a few slices of lemon—a meal full of irresistible aroma.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_SpicyFish</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <ingestible>
	  <tasteThought>RkM_AteSpicyFish</tasteThought>
    </ingestible>
  </ThingDef>
  
  
  <!--莓果制品-->
  <ThingDef Name="RkM_BerryProductBase" ParentName="MealCookedIngredientless" Abstract="True">
	<thingCategories Inherit="False">
      <li>Foods</li>
    </thingCategories>
	<tickerType>Rare</tickerType>
	<statBases>
      <MarketValue>20</MarketValue>
      <WorkToMake>300</WorkToMake>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealFine</preferability>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <optimalityOffsetFeedingAnimals>-75</optimalityOffsetFeedingAnimals>
      <joyKind>Gluttonous</joyKind>
    </ingestible>
	<rotatable>false</rotatable>
  </ThingDef>
  
  <!-- ========== 蜜饯 / Candied Fruit ========== -->
  <ThingDef ParentName="RkM_BerryProductBase">
    <defName>RkM_CandiedFruit</defName>
    <label>ratkin candied fruit</label>
	<description>Berries candied and paired with honey and mint, a classic and delicious Ratkin's dessert, a favorite among little mice!</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_CandiedFruit</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <ingestible>
	  <tasteThought>RkM_AteCandiedFruit</tasteThought>
	  <joy>0.10</joy>
    </ingestible>
  </ThingDef>
  <!-- ========== 莓果派 / Berry Pie ========== -->
  <ThingDef ParentName="RkM_BerryProductBase">
    <defName>RkM_BerryPie</defName>
    <label>ratkin berry pie</label>
	<description>A sweet pie made with freshly picked wild berries, delightfully tangy and sweet.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_BerryPie</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <ingestible>
	  <tasteThought>RkM_AteBerryPie</tasteThought>
	  <joy>0.15</joy>
    </ingestible>
  </ThingDef>

</Defs>
