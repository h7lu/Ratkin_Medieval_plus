    <defName>RkM_Salad</defName>
    <label>ratkin salad</label>
    <description>Made with freshly picked vegetables and wild berries, simply mixed for a refreshing and light taste.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_Salad</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>15</MarketValue>
      <WorkToMake>300</WorkToMake>
      <Nutrition>0.9</Nutrition>
    </statBases>
