<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ========================================== -->
  <!--          拉特金中世纪+ 饮品配方              -->
  <!--      Ratkin Medieval+ Beverage Recipes      -->
  <!-- ========================================== -->

  <!-- ========== 热水配方 / Hot Water Recipe ========== -->
  
  <RecipeDef>
    <defName>RkM_MakeHotWater</defName>
    <label>prepare hot water</label>
    <description>Heat water for a simple warm drink.</description>
    <jobString>Preparing hot water.</jobString>
    <workAmount>100</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredients>
    </ingredients>
    <products>
      <RkM_HotWater>1</RkM_HotWater>
    </products>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
  </RecipeDef>

  <!-- ========== 热茶配方 / Hot Tea Recipe ========== -->
  
  <RecipeDef>
    <defName>RkM_MakeHotTea</defName>
    <label>brew hot tea</label>
    <description>Brew tea leaves into a refreshing hot drink.</description>
    <jobString>Brewing hot tea.</jobString>
    <workAmount>200</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
        <count>0.05</count>
      </li>
    </ingredients>
    <products>
      <RkM_HotTea>1</RkM_HotTea>
    </products>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
  </RecipeDef>

  <!-- ========== 简易浆果酒配方 / Simple Berry Wine Recipe ========== -->
  
  <RecipeDef>
    <defName>RkM_MakeSimpleBerryWine</defName>
    <label>brew simple berry wine</label>
    <description>Ferment berries into a simple, rustic wine.</description>
    <jobString>Brewing simple berry wine.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
        <count>0.25</count>
      </li>
    </ingredients>
    <products>
      <RkM_SimpleBerryWine>1</RkM_SimpleBerryWine>
    </products>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
      <li>Campfire</li>
    </recipeUsers>
  </RecipeDef>

  <!-- ========== 精酿浆果酒配方 / Berry Wine Recipe ========== -->
  
  <RecipeDef>
    <defName>RkM_MakeBerryWine</defName>
    <label>craft berry wine</label>
    <description>Craft a high-quality berry wine with refined fermentation.</description>
    <jobString>Crafting berry wine.</jobString>
    <workAmount>600</workAmount>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
        <count>0.4</count>
      </li>
    </ingredients>
    <products>
      <RkM_BerryWine>1</RkM_BerryWine>
    </products>
