      <Cooking>4</Cooking>
    </skillRequirements>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
  </RecipeDef>

  <!-- ========== 鼠麦酒配方 / Rat Wheat Ale Recipe ========== -->
  
  <RecipeDef>
    <defName>RkM_MakeRatWheatAle</defName>
    <label>brew rat wheat ale</label>
    <description>Brew a unique ale from rat wheat grain.</description>
    <jobString>Brewing rat wheat ale.</jobString>
    <workAmount>500</workAmount>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.35</count>
      </li>
    </ingredients>
    <products>
      <RkM_RatWheatAle>1</RkM_RatWheatAle>
    </products>
    <skillRequirements>
      <Cooking>3</Cooking>
    </skillRequirements>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
  </RecipeDef>

  <!-- ========== 草药酒配方 / Herbal Wine Recipe ========== -->
  
  <RecipeDef>
    <defName>RkM_MakeHerbalWine</defName>
    <label>brew herbal wine</label>
    <description>Infuse wine with medicinal herbs for healing properties.</description>
    <jobString>Brewing herbal wine.</jobString>
    <workAmount>700</workAmount>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
