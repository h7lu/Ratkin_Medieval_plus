<Defs>

  <!-- ========== 热水 / Hot Water ========== -->
  <ThingDef ParentName="DrugBase">
    <defName>RkM_HotWater</defName>
    <label>hot water</label>
    <description>Simple boiled water that has been heated. Drinking it provides warmth and may help reduce the chance of getting sick.</description>
    <graphicData>
      <texPath>Things/Items/Foods/RkM_HotWater</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>100</WorkToMake>
      <MarketValue>3</MarketValue>
      <Mass>0.3</Mass>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <ingestible>
      <foodType>Fluid</foodType>
      <nurseable>true</nurseable>
      <drugCategory>None</drugCategory>
      <ingestSound>Ingest_Drink</ingestSound>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RkM_Warmed</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
  </ThingDef>

