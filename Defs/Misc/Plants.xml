      <immatureGraphicPath>Things/Plants/Sage_Immature</immatureGraphicPath>
      <dieIfLeafless>true</dieIfLeafless>
      <maxMeshCount>4</maxMeshCount>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RkM_Sage</harvestedThingDef>
      <harvestYield>8</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>12</growDays>
      <visualSizeRange>0.4~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Health</purpose>
      <humanFoodPlant>false</humanFoodPlant>
    </plant>
  </ThingDef>

