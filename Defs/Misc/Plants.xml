      <harvestedThingDef>RkM_RatWheatFlour</harvestedThingDef>
      <harvestYield>8</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>20</growDays>
      <visualSizeRange>0.4~1.2</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
      <humanFoodPlant>true</humanFoodPlant>
	  <fertilityMin>0.30</fertilityMin>
	  <fertilitySensitivity>0.3</fertilitySensitivity>
	  <minGrowthTemperature>-5</minGrowthTemperature>
      <maxGrowthTemperature>38</maxGrowthTemperature>
      <leaflessTemperature>-20</leaflessTemperature>
	  <wildOrder>2</wildOrder>
    </plant>
	<comps>
	  <li Class="RkM.CompProperties_AdditionalHarvestYield">
	    <additionalHarvestYield>
			<Hay>5</Hay>
		</additionalHarvestYield>
	  </li>
	</comps>
  </ThingDef>

