			<southOffset>
				<position>(-0.25,0.3,0.2)</position>
				<angle>45</angle>
			</southOffset>
			<eastOffset>
				<position>(0.15,0.3,0.2)</position>
				<angle>-45</angle>
			</eastOffset>
			<westOffset>
				<position>(-0.15,-0.3,0.2)</position>
				<angle>45</angle>
			</westOffset>
		</li>
	</comps>
  </ThingDef>
	
