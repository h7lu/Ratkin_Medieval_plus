      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>11</power>
        <cooldownTime>0.4</cooldownTime>
      </li>
      <li>
        <label>tail</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>0.4</cooldownTime>
